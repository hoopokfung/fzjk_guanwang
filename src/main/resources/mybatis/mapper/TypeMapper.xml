<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fzjk.guanwang.mapper.TypeMapper">
    <!--    查询管理员列表-->
    <select id="queryTypeList" resultType="Type">
        select * from t_type
    </select>

    <!--    根据id查询管理员-->
    <select id="queryTypeById" resultType="Type">
        select * from t_type where id = #{id}
    </select>

    <!--   根据前台注册的信息增加管理员-->
    <insert id="addType" parameterType="Type">
        insert into t_type(name) values (#{name})
    </insert>

    <update id="updateType" parameterType="Type">
        update t_type set account=#{account},password=#{password} where id = #{id}
    </update>

    <delete id="deleteType" parameterType="int">
        delete from t_type where id = #{id}
    </delete>

</mapper>